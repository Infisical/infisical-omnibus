#!/bin/bash
set -e # fail on errors

# Redirect stderr -> stdout
exec 2>&1

cd '/opt/infisical/server'

<% @options[:env_vars].each do |key, value| %>
    export <%= key %>="<%= value %>"
<% end %>

exec  chpst -e <%= @options[:env_dir] %> -P  -U <%= @options[:user] %>:<%= @options[:groupname] %>  -u <%= @options[:user] %>:<%= @options[:groupname] %> ./standalone-entrypoint.sh